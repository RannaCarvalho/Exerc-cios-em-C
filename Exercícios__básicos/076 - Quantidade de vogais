#include <stdio.h>
#include <locale.h>
#define MAX 200

int main(){
    setlocale(LC_ALL, "Portuguese");
    char str[MAX];
    int i, vogais=0;
    
    printf ("Digite uma string: ");
    fgets (str, MAX, stdin);
    
    for(i=0;str[i] != '\0';i++){
        if (str[i]=='A'|| str[i]=='E'|| str[i]=='I'|| str[i]=='O'|| str[i]=='U'){
            vogais++;
        } 
        if (str[i]=='a'|| str[i]=='e'|| str[i]=='i'|| str[i]=='o'|| str[i]=='u'){
            vogais++;
        } 
    }
    printf("A quantidade de vogais na string: %d", vogais);
        
    return 0;
}
