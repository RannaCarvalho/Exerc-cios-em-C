// Procurar o maior e o menor número do array
#include <stdio.h>
#include <locale.h>
#define POSICOES 10

int main()
{
    setlocale(LC_ALL, "Portuguese");
    
    int array[POSICOES];
    int i, j, maior_num, menor_num;
    
    printf("Digite um número inteiro para cada posição do vetor: ");
    for (i=0; i<POSICOES; i++){
        printf ("\nPosição %d: ", i+1);
        scanf ("%d", &array[i]);
    }
    
    maior_num = array[0];
    menor_num = array[0];
    
    for (i=0; i<POSICOES; i++){
        if (array[i]>maior_num)
            maior_num = array[i];
        if (array[i]<menor_num)
            menor_num = array[i];
        
    }
    printf("\nMaior número do vetor: %d", maior_num);
    printf("\nMenor número do vetor: %d", menor_num);

    
    return 0;
}
