// calculo da area e perimetro de um circulo
#include <stdio.h>

int main()
{
    float pi=3.14;
    float perimetro, area;
    float raio;
    
    printf("Informe o valor do raio do circulo: ");
    scanf ("%f", &raio);
    area = pi * (raio * raio);
    perimetro = 2 * pi * raio;
    
    printf("\n A area do circulo e de %0.2f e o perimetro do triangulo Ã© de %0.2f", area, perimetro);

    return 0;
}
