#include <stdio.h>
#include <locale.h>
#define MAX 5

int main(){
    setlocale(LC_ALL, "Portuguese");
    int matriz[MAX][MAX];
    int soma_linha[MAX];
    int soma_coluna[MAX];
    int i=0, j=0;
    
    printf ("Digite os valores da matriz:\n");
    for(i = 0; i < MAX; i++){
		for(j = 0; j < MAX; j++){
			printf("Insira o valor da posição [%d, %d]: ", i, j);
			scanf("%d", &matriz[i][j]);
		}
	}
    for (i=0; i<MAX; i++){
        soma_linha[i]=0;
        soma_coluna[i]=0;
    }
    for (i=0; i<MAX; i++){
        for (j=0; j<MAX; j++){
            soma_linha[i] += matriz[i][j];
            soma_coluna[j] += matriz[i][j];
        }
    }
    for(i = 0; i < MAX; i++){
		for(j = 0; j < MAX; j++)
			printf(" %d ", matriz[i][j]);
		printf("\n");
	}
    printf("\nSoma das linhas:\n");
    for(i=0; i<MAX;i++)
        printf("%d ", soma_linha[i]);
    printf("\nSoma das colunas:\n");
    for(j=0; j<MAX; j++)
        printf("%d ", soma_coluna[j]);
    return 0;
}
