#include <stdio.h>
#include <locale.h>
#define MAX 200

int main(){
    setlocale(LC_ALL, "Portuguese");
    char str[MAX];
    char maior_palavra[MAX], palavra_atual[MAX];
    int i=0, j=0, k=0;
    int tamanho_atual=0, tamanho_maior=0;
    
    printf ("Digite uma string:\n");
    fgets (str, MAX, stdin);
    
    while (str[i] != '\0' && str[i] != '\n') {
        i++;
    }
    if (str[i] == '\n') {
        str[i] = '\0';
    }
    for (i = 0; str[i] != '\0'; i++) {
        if (str[i] != ' ') {
            palavra_atual[j] = str[i];
            j++;
            tamanho_atual++;
        } else {
            palavra_atual[j] = '\0';
            if (tamanho_atual > tamanho_maior) {
                tamanho_maior = tamanho_atual;
                
                while (palavra_atual[k] != '\0') {
                    maior_palavra[k] = palavra_atual[k];
                    k++;
                }
                maior_palavra[k] = '\0';
            }
        j = 0;
        tamanho_atual = 0;
        }
    }
    palavra_atual[j] = '\0'; 
    if (tamanho_atual > tamanho_maior) {
        k=0;
        while (palavra_atual[k] != '\0') {
            maior_palavra[k] = palavra_atual[k];
            k++;
        }
        maior_palavra[k] = '\0'; 
        tamanho_maior = tamanho_atual;
    }
    printf("\nA maior palavra da string e: \"%s\"\n", maior_palavra);
    printf("O tamanho da maior palavra e: %d\n", tamanho_maior);
    return 0;
}
