#include <stdio.h>
#include <locale.h>
#define MAX 200

int main(){
    setlocale(LC_ALL, "Portuguese");
    char str[MAX], str2[MAX];
    int i, j, contem=0;
    
    printf ("Digite uma string: ");
    fgets (str, MAX, stdin);
    printf ("Digite uma string a ser avaliada: ");
    fgets (str2, MAX, stdin);
    
    for (i=0; str[i] != '\0' && str[i] != '\n';i++ ){
        if (str [i] == str2[0]){
            for (j = 0; str2[j] != '\0' && str2[j] != '\n'; j++ ){
                if (str[i + j] != str2[j]) {
                break;
                }
            }
        
            if (str2[j] == '\0' || str2[j] == '\n') {
                contem = 1;
                break;
            }
        }
    }
    if(contem)
    printf("a primeira string contem a seguda");
    else
    printf("a primeira string nao contem a seguda");
    return 0;
}
