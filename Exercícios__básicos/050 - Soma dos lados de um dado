/*Escreva um programa que receba um número e verifique as combinações dele com dois dados.*/
#include <stdio.h>
#include <locale.h>

int main(){
	setlocale(LC_ALL, "Portuguese");
	
	int i, j, numero, soma;
	
	printf("Digite um número: ");
	scanf("%d", &numero);
	
	for (i=1; i<=6; i++){
	    for (j=6; j>=1; j--){
	        if (numero == (i+j)){
	            printf ("\n %d + %d", i, j);
	        }
	    }
	}
	
	return 0;
}
