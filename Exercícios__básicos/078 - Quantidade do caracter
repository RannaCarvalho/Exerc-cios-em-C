#include <stdio.h>
#include <locale.h>
#define MAX 200

int main(){
    setlocale(LC_ALL, "Portuguese");
    char str[MAX], caracter[2];
    int i,tam=0, c=0;
    
    printf ("Digite uma string: ");
    fgets (str, MAX, stdin);
    printf ("Digite um caracter a ser procurado: ");
    fgets (caracter, 2, stdin);
    
    for(i=0;str[i]!='\0' && str[i]!='\n';i++){
        tam++;
    }
    for(i=0; i<tam; i++){
        if (str[i]==caracter[0])
            c++;
    }
    printf("A quantidade do caracter na string: %d", c);
    return 0;
}
