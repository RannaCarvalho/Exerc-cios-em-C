// Array simples
#include <stdio.h>
#include <locale.h>
#define POSICOES 20

int main()
{
    setlocale(LC_ALL, "Portuguese");
    
    int array[POSICOES];
    int i;
    
    printf("Digite um número inteiro para cada posição: ");
    for (i=0; i<POSICOES; i++){
        printf ("\nPosição %d: ", i+1);
        scanf ("%d", &array[i]);
    }
    for (i=0; i<POSICOES; i++){
        printf ("\nPosição %d: %d", i, array[i]);
    }
    
    
    return 0;
}
