#include <stdio.h>
#include <locale.h>
#define MAX 200

int main(){
    setlocale(LC_ALL, "Portuguese");
    char str[MAX], norm[MAX];
    int i=0, j=0;
    
    printf ("Digite uma string: ");
    fgets (str, MAX, stdin);
    for(i=0; str[i] != '\0' && str[i] != '\n'; i++){
        if(str[i] != ' ')
            norm[j++] = str[i];
        else if(str[i+1] != ' ' && str[i+1] != '\n' && str[i+1] != '\0')
            norm[j++] = ' ';
    }
    norm[j] = '\0';
    puts (norm);
    return 0;
}
