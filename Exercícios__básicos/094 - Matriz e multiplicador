#include <stdio.h>
#include <locale.h>
#define MAX 5

int main(){
    setlocale(LC_ALL, "Portuguese");
    int matriz[MAX][MAX];
    int multiplicador;
    int i=0, j=0;
    
    printf ("Digite os valores da matriz:\n");
    for(i = 0; i < MAX; i++){
		for(j = 0; j < MAX; j++){
			printf("Insira o valor da posição [%d, %d]: ", i, j);
			scanf("%d", &matriz[i][j]);
		}
	}
	printf("\nMatriz antes da multiplicação: \n");
	for(i=0; i<MAX; i++){
		for(j=0; j<MAX; j++)
			printf(" %d ", matriz[i][j]);
		printf("\n");
	}
	printf ("\nDigite o valor inteiro a ser mutiplicado: ");
	scanf("%d", &multiplicador);
	printf("\n");
    for(i = 0; i < MAX; i++){
		for(j = 0; j < MAX; j++)
			matriz[i][j] *= multiplicador;
    }
    printf("\nA nova matriz após a multiplicação: \n ");
	for(i=0; i<MAX; i++){
		for(j=0; j<MAX; j++)
			printf(" %d ", matriz[i][j]);
		printf("\n");
	}
    
    return 0;
}
