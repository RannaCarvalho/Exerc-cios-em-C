/* Escreva um programa que calcule o resto da divisão de A por B (número inteiros e
positivos), ou seja, A % B, através de subtrações sucessivas.*/
#include <stdio.h>
#include <locale.h>

int main(){
	setlocale(LC_ALL, "Portuguese");
	
	int dividendo, divisor, resto;
	
	printf ("Digite o dividendo e o divisor: ");
	scanf ("%d %d", &dividendo, &divisor);
	
	resto = dividendo;
	while (resto>(dividendo%divisor)){
	    resto--;
	}
    printf("O resto da divisão: %d", resto);
    return 0;
}
