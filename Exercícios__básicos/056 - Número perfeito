// Verificar se um número é perfeito
#include <stdio.h>
#include <locale.h>

int main()
{
    setlocale(LC_ALL, "Portuguese");
    
    int divisores1=0, num1;
    int i;
    
    printf ("Digite um número para verificar se ele é perfeito: ");
    scanf ("%d", &num1);
    
    for (i=1; i<num1; i++){
        if (num1%i == 0){
            divisores1 += i;
        }
    }
    
    if (divisores1 == num1){
        printf ("\nO número %d é perfeito!", num1);
    } else{
        printf ("\nO número %d não é perfeito", num1);
    }
    
    return 0;
}
