// calculo do perimetro de um triangulo
#include <stdio.h>

int main()
{
    int lado1, lado2, lado3;
    int perimetro;
    
    printf("Informe os valores dos lados do triangulo: ");
    scanf ("%d %d %d", &lado1, &lado2, &lado3);
    
    perimetro = lado1+lado2+lado3;
    
    printf("\n O perimetro do triangulo Ã© de %d", perimetro);

    return 0;
}
