/*Criar um algoritmo que imprima os N primeiros termos da série de FETUCCINE,
sabendo-se que para existir esta série serão necessários pelo menos três termos. */
#include <stdio.h>
#include <locale.h>

int main(){
	setlocale(LC_ALL, "Portuguese");
	
	int i=3, termo1, termo2, termo, n_termos ;
	
	printf("Digite o primeiro e segundo termo, e número de termos que deseja: ");
	scanf("%d %d %d", &termo1, &termo2, &n_termos);
	
	if (n_termos<3)
	    printf("INVALIDO, o número de termos não pode ser menos que 3");
	else{
	    printf("Sequecia: %d, ", termo1);
		printf("%d", termo2);
		
		termo = termo2 + termo1;
		
		while(i <= n_termos){
			printf(", %d", termo);
			termo1 = termo2;
			termo2 = termo;
			termo = (i % 2 == 0)? termo2 - termo1 : termo2 + termo1;
			i++;
		}
	}
	    
	
	
	return 0;
}
