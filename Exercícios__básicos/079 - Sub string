#include <stdio.h>
#include <locale.h>
#define MAX 200

int main(){
    setlocale(LC_ALL, "Portuguese");
    char str[MAX], sub_str[MAX];
    int i, inicio, fim;
    
    printf ("Digite uma string: ");
    fgets (str, MAX, stdin);
    printf ("Digite as posições inicial e final da sub string: ");
    scanf("%d %d", &inicio, &fim);
    
    for(i=0; inicio<=fim; i++, inicio++)
            sub_str[i]=str[inicio];
    sub_str[i++] = '\0';
    printf("\nA sub string da string original: ");
    puts(sub_str);
    return 0;
}
