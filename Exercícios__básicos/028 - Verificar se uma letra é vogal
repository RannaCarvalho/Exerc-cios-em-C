#include <stdio.h>

int main()
{
    char letra;
    int eh_vogal = 0;
    
    printf("Digite uma letra: ");
    scanf ("%c", &letra);
    
    if (letra=='a' || letra=='A') eh_vogal = 1;
    else if (letra=='e' || letra=='E') eh_vogal = 1;
    else if (letra=='i' || letra=='I') eh_vogal = 1;
    else if (letra=='o' || letra=='O') eh_vogal = 1;
    else if (letra=='u' || letra=='U') eh_vogal = 1;
    else eh_vogal = 0;
    
    if(eh_vogal) printf ("essa letra e vogal");
    else printf ("essa letra n√£o e vogal");

    return 0;
}
